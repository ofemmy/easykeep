generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["createMany", "groupBy"]
}

///
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            Int             @id @default(autoincrement())
  title         String
  amount        Decimal         @db.Decimal
  type          TransactionType
  frequency     TrxFrequency
  entryDate     DateTime        @db.Timestamptz
  category      String
  recurringFrom DateTime?       @db.Timestamptz
  recurringTo   DateTime?       @db.Timestamptz
  ownerId       Int
  users         User            @relation(fields: [ownerId], references: [id])

  @@map("transactions")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String
  password     String
  transactions Transaction[]

  Profile Profile?
  @@map("users")
}

model Profile {
  id         Int      @id @default(autoincrement())
  categories String[]
  currency   String
  language   String
  user       Int
  User       User     @relation(fields: [user], references: [id])

  @@map("user_profile")
}

enum TrxFrequency {
  Once
  Recurring

  @@map("Trxfrequency")
}

enum TransactionType {
  Income
  Expense

  @@map("trxtype")
}
